generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Admin {
  id       Int    @id @default(1)
  username String @default("shalom")
  password String @default("9484") // Note: In production use hashed passwords
}

model SchoolSettings {
  id        Int     @id @default(1)
  name      String  @default("Shalom Kindergarten & Primary School")
  logoUrl   String  @default("/logo.jpeg")
  updatedAt DateTime @updatedAt
}

model HomePage {
  id          Int     @id @default(1)
  heroTitle   String  @default("Shalom Kindergarten & Primary School")
  heroSub     String  @default("Nurturing Excellence, Inspiring Futures.")
  aboutShort  String  @default("Founded on the principles of love and integrity, we provide a holistic education that prepares children for a lifetime of success.")
}

model AboutPage {
  id        Int     @id @default(1)
  bio       String  @default("Shalom Kindergarten & Primary School is a premier educational institution dedicated to providing a supportive and enriched learning environment for young learners.")
  mission   String  @default("To empower every child with the knowledge, skills, and values they need to thrive in a changing world.")
  experience String @default("Years of dedicated service in nurturing young minds and fostering academic excellence.")
  history    String @default("Founded with a vision to provide quality education, Shalom has grown from a small nursery into a full-fledged primary school with a legacy of excellence.")
}

model Resource {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  link        String?
  createdAt   DateTime @default(now())
}

model Plan {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String
  createdAt   DateTime @default(now())
}

model Design {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String
  createdAt   DateTime @default(now())
}

model PageView {
  id        Int      @id @default(autoincrement())
  path      String
  timestamp DateTime @default(now())
}

model AdminLog {
  id        Int      @id @default(autoincrement())
  action    String
  status    String
  timestamp DateTime @default(now())
}

model ContactInfo {
  id       Int     @id @default(1)
  email    String  @default("info@shalomschool.com")
  phone    String  @default("+123 456 7890")
  address  String  @default("Shalom Campus, Education St, City")
  linkedin String? @default("linkedin.com/company/shalomschool")
}

model StaffMember {
  id        Int      @id @default(autoincrement())
  name      String
  title     String
  phone     String
  imageUrl  String?
  order     Int      @default(0) // Control display order
  createdAt DateTime @default(now())
}

model SchoolEnvironment {
  id          Int      @id @default(autoincrement())
  title       String
  subLabel    String
  description String
  icon        String?  // Emoji or Lucide icon name
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}
